<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">Editar categoria</h4>
        </div>
        <div class="content">
            <form method="POST" action="/admin/capitulos/update/{{ chapter._id }}?_method=PUT">
                <input type="hidden" name="confession_id" value="{{ params.confession_id }}" />
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Nome</label>
                            <select readonly name="confession_id" class="form-control">
                                <option value="">Escolha uma confissão</option>
                                {{#each confessions}}
                                    <option
                                        value="{{ this.id }}"
                                        {{ optionSelected this.id ../params.confession_id }}
                                    >
                                        {{ this.title }}
                                    </option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Capítulo</label>
                            <input
                                name="name"
                                type="text"
                                class="form-control"
                                placeholder="Nome"
                                value="{{ chapter.name }}"
                            >
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Ordem</label>
                            <input
                                name="order"
                                type="text"
                                class="form-control"
                                placeholder="Ordem"
                                value="{{ chapter.order }}"
                            >
                        </div>
                    </div>
                </div>
                <a href="#" type="submit" class="btn btn-default btn-fill pull-left">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-info btn-fill pull-right">
                    Salvar
                </button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>