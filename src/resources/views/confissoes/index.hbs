<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <h5>
                    <a href="#">
                        <i class="pe-7s-back"></i>
                        Voltar
                    </a>
                </h5>
            </div>
            <div class="col-md-6 text-right">
                <a href="/admin/confissoes/create" class="btn btn-primary">
                    Adicionar
                </a>
            </div>
        </div>
        <div class="clearfix"></div><br>
        <div class="card">
            <div class="header">
                <h4 class="title">Confissões & Categorias</h4>
                <p class="category">
                    Categorias e confissões cadastradas
                </p>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <th>Categoria</th>
                        <th>Criado em</th>
                        <th>Atualizado em</th>
                        <th>Ações</th>
                    </thead>
                    <tbody>
                        {{#each confessions}}
                        <tr>
                            <td>{{ this.title }}</td>
                            <td>{{ formatData created_at format="DD/MM/YYYY" }}</td>
                            <td>{{ formatData updated_at format="DD/MM/YYYY" }}</td>
                            <td width="80">
                                <div class="btn-group">
                                    <a href="#" class="btn btn-warning btn-xs" title="Editar">
                                        <i class="pe-7s-note"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-xs" title="Deletar">
                                        <i class="pe-7s-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>