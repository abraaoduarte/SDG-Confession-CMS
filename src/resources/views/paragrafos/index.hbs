<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <h5>
                    <a href="#">
                        <i class="pe-7s-back"></i>
                        Voltar
                    </a>
                </h5>
            </div>
            {{#if confession}}
            <div class="col-md-6 text-right">
                <a
                    href="/admin/capitulos/create/{{ confession.id }}"
                    class="btn btn-fill btn-primary"
                >
                    Adicionar
                </a>
            </div>
            {{/if}}
        </div>
        <div class="clearfix"></div><br>
        {{#if flash.info}}
            <div class="alert alert-success">
                <button type="button" aria-hidden="true" class="close">×</button>
                <span>{{flash.info }}</span>
            </div>
        {{/if}}

        {{#if flash.error}}
            <div class="alert alert-danger">
                <button type="button" aria-hidden="true" class="close">×</button>
                <span>{{flash.error }}</span>
            </div>
        {{/if}}
        <div class="card">
            <div class="header">
                <form method="GET" class="form-inline" style="padding: 10px;">
                    <select name="confession_id" id="confession_id" class="form-control js-confessions">
                        <option value="">Escolha uma confissão</option>
                        {{#each confessions}}
                            <option
                                value="{{ this.id }}"
                                {{ optionSelected this.id ../confession.id }}
                            >

                                {{ this.title }}
                            </option>
                        {{/each}}
                    </select>
                    <select name="chapter_id" id="chapter_id" class="form-control js-chapter-id">
                        <option value="">Escolha uma capítulo</option>
                    </select>
                    <button class="btn btn-fill btn-success js-button-search" disabled>Buscar</button>
                </form>
                <div class="clearfix"></div>
                {{#if confession}}
                    <h4 class="title">Capítulos</h4>
                    <p class="category">
                        <strong>Capítulos Cadastrados - {{ confession.title }}</strong>
                    </p>
                {{/if}}
            </div>
            {{#if confession}}
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <th>Capítulo</th>
                        <th>Ordem</th>
                        <th>Criado em</th>
                        <th>Atualizado em</th>
                        <th>Ações</th>
                    </thead>
                    <tbody>
                        {{#each confession.chapters}}
                        <tr>
                            <td>{{ this.name }}</td>
                            <td>{{ this.order }}</td>
                            <td>{{ formatData created_at format="DD/MM/YYYY" }}</td>
                            <td>{{ formatData updated_at format="DD/MM/YYYY" }}</td>
                            <td width="80">
                                <div class="btn-group">
                                    <a
                                        href="/admin/capitulos/edit/{{ ../confession.id }}/{{ this._id }}"
                                        class="btn btn-warning btn-fill btn-xs"
                                        title="Editar"
                                    >
                                        <i class="pe-7s-note"></i>
                                    </a>
                                    <form
                                        method="POST"
                                        style="display: inline;"
                                        action="/admin/capitulos/delete/{{ this._id }}?_method=DELETE"
                                    >
                                        <input type="hidden" name="confession_id" value="{{ ../confession.id }}" />
                                        <button class="btn btn-danger btn-xs btn-fill">
                                            <i class="pe-7s-trash"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}
            </div>
        </div>
    </div>
</div>